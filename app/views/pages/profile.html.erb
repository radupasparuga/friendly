			<div class="card-body">
				<p><%= @p.content %></p>
			</div>
		</div>
		<% end %>
	</div>

<!--  Recomandations	-->

	<div class="col-3">
		<div class="card w-75">
			<div class="card-body">
				<p>Recomandations</p>
			</div>
		</div>
		<div class="card w-75">
			<div class="card-body">
				<p>Trends</p>
			</div>
		</div>
	</div>
</div>
