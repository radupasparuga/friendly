<div class="row">
	<div class="col-12">
		<div class="jumbotron">
			<%= @username %>
		</div>
	</div>
</div>

<!-- Profile	 -->

<div class="row">
	<div class="col-3">
		<div class="card w-75">
			<div class="card-body">
				<p>Profile</p>
			</div>
		</div>
	</div>

<!-- Posts  -->

	<div class="col-6">
		<%= render '/components/post_form' %>
